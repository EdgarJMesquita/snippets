{
  "React Native Component": {
    "scope": "javascript, typescript, typescriptreact",
    "prefix": "rnc",
    "body": [
      "import React from 'react';",
      "import { View } from 'react-native';",
      "import { styles } from './styles';",
      "",
      "export function ${TM_DIRECTORY/.*[\\\\|\\/]+(.*)/$1/}(){",
      " return (",
      "   <View style={styles.container}>",
      "",
      "   </View>",
      " );",
      "}"
    ],
    "description": "Basic React Native Componente"
  },

  "React Native Style": {
    "scope": "javascript, typescript",
    "prefix": "rns",
    "body": [
      "import { StyleSheet } from 'react-native';",
      "",
      "export const styles = StyleSheet.create({",
      " container: {",
      "   flex: 1",
      "  }",
      "});"
    ],
    "description": "Basic stylesheet for React Native"
  },

  "React Native Styled Componentes": {
    "scope": "javascript, typescript",
    "prefix": "rnsc",
    "body": ["export const ${name} = styled.${component}``;"],
    "description": "Basic styled components for React Native"
  },

  "React useState": {
    "scope": "javascript, typescript",
    "prefix": "useState",
    "body": ["const [${state}, set${setState}] = useState(${initialValue});"],
    "description": "useState Hook"
  },

  "Create Repository": {
    "scope": "typescript",
    "prefix": "repo",
    "body": [
      "import { EntityRepository, Repository } from 'typeorm';",
      "import { ${entity} } from '../entities/${entity}';",
      "",
      "@EntityRepository(${entity})",
      "class ${TM_FILENAME_BASE/(.*)/${1}/} extends Repository<${entity}> {}",
      "",
      "export {${TM_FILENAME_BASE/(.*)/${1}/}};"
    ],
    "description": "Create a repository"
  },
  "Create Controller": {
    "scope": "typescript",
    "prefix": "cont",
    "body": [
      "import { Request, Response } from 'express';",
      "import { ${service} } from '../services/${service}';",
      "",
      "class ${TM_FILENAME_BASE/(.*)/${1}/} {",
      " async handle(request: Request, response: Response){",
      "",
      " }",
      "}",
      "",
      "export {${TM_FILENAME_BASE/(.*)/${1}/}};"
    ],
    "description": "Create a controller"
  },
  "Create Service": {
    "scope": "typescript",
    "prefix": "serv",
    "body": [
      "import { getCustomRepository } from 'typeorm'",
      "import { ${repository} } from '../services/${repository}';",
      "",
      "interface I${TM_FILENAME_BASE/(.*)/${1}/}{",
      "",
      "}",
      "",
      "class ${TM_FILENAME_BASE/(.*)/${1}/} {",
      " async execute(){",

      "",
      " }",
      "}",
      "",
      "export {${TM_FILENAME_BASE/(.*)/${1}/}};"
    ],
    "description": "Create a service"
  }
}
